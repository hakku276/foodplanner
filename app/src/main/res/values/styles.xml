<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecipeListTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecipeInfoTagsText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="RecipeEditorSectionHeader" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="RecipeBody" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
