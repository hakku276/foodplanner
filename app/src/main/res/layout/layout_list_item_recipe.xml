<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_recipe"
    android:layout_marginTop="@dimen/margin_content_to_content"
    android:background="@drawable/background_cookbook_recipe">

    <ImageButton
        android:layout_width="@dimen/size_cookbook_recipe_thumbnail"
        android:layout_height="@dimen/size_cookbook_recipe_thumbnail"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/placeholder"
        android:scaleType="fitCenter"
        android:id="@+id/btn_recipe_thumbnail"
        android:layout_margin="@dimen/margin_content_to_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_recipe_thumbnail"
        android:layout_toStartOf="@id/btn_recipe_more"
        android:layout_marginTop="@dimen/margin_header_top"
        style="@style/RecipeListTitle"
        android:id="@+id/text_recipe_name"
        android:layout_marginStart="@dimen/margin_content_to_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_recipe_name"
        android:layout_toEndOf="@+id/btn_recipe_thumbnail"
        android:layout_toStartOf="@+id/btn_recipe_more"
        android:layout_marginTop="@dimen/margin_content_to_content"
        android:id="@+id/text_recipe_tags"
        android:layout_marginStart="@dimen/margin_content_to_content"/>

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_more_vert_black_24"
        android:id="@+id/btn_recipe_more"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_content_to_content"
        android:contentDescription="@string/more_action"/>

</RelativeLayout>
