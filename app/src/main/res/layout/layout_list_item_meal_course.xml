<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_meal_plan_course"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:id="@+id/meal_type_marker"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Medium"
        android:textSize="@dimen/text_size_meal_plan_meal"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/meal_type_marker"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@+id/btn_meal_action_more"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_more_vert_black_24"
        android:id="@+id/btn_meal_action_more"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/more_action"/>

</RelativeLayout>
