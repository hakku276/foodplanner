<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="np.com.aanalbasaula.foodplanner.views.cookbook.CookBookFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.cookbook.CookBookFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_cookbook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_screen_to_content"
        tools:listitem="@layout/layout_list_item_recipe" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_create_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_fab"
        android:layout_marginBottom="@dimen/margin_fab"
        android:src="@drawable/baseline_create_white_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>